{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "outDir": "out",
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["es2020", "DOM"],
      "moduleResolution": "NodeNext",
      "typeRoots": ["node_modules/**/*.d.ts", "@types"],
      "importHelpers": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
    },
    "exclude": ["node_modules", "out", "tests"]
  }
  